{
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers-contrib/features/neovim-homebrew:1": {},
    "ghcr.io/rio/features/k9s:1": {},
    "ghcr.io/jsburckhardt/devcontainer-features/flux:1" : {},
    "ghcr.io/jungaretti/features/ripgrep:1": {},
    "ghcr.io/devcontainers-extra/features/direnv:1": {},
    "ghcr.io/devcontainers-extra/features/exa:1": {},
    "ghcr.io/devcontainers-extra/features/fzf:1": {},
    "ghcr.io/devcontainers-extra/features/fd:1": {},
    "ghcr.io/georgofenbeck/features/lazygit-linuxbinary:1" : {}
  },
  "onCreateCommand": "sudo chsh -s /usr/bin/zsh $USER",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.profile.linux": {
      "zsh": {
        "path": "/usr/bin/zsh"
      }
    }
  },
  "postCreateCommand": "./install-dependencies.sh"
}
